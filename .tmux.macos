# partial .tmux.conf for macOS
#
# by meinside@gmail.com
#
# last update: 2021.10.26.

set -g message-command-style fg=colour255,bg=colour235
set -g message-style fg=colour222,bg=colour235
set -g pane-active-border-style fg=colour160
set -g status-style fg=colour255,bg=colour235

set -g status-left '#[fg=colour232,bg=colour245] #S #[fg=colour245,bg=colour235,nobold,nounderscore,noitalics]'
set -g status-right '#[fg=colour235,bg=colour235,nobold,nounderscore,noitalics]#[fg=colour121,bg=colour235] %R  %b/%d (%a) #[fg=colour245,bg=colour235,nobold,nounderscore,noitalics]#[fg=colour232,bg=colour245] #H '

setw -g window-status-separator ''
setw -g window-status-format '#{?window_activity_flag,#[fg=colour235 bg=colour255 bold],#[fg=colour245 bg=colour235 nobold nounderscore noitalics]} #I #W '
setw -g window-status-current-format '#[fg=colour222,bg=colour235,bold] #I #W '

