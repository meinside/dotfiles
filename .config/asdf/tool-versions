# $ asdf plugin add zig
# $ asdf install zig
#
# For zls, (https://github.com/zigtools/zls)
#   :MasonInstall zls
# or
#   $ sudo rm -rf /opt/zls
#   $ sudo mkdir -p /opt/zls
#   $ sudo chown -R "$USER" /opt/zls
#   $ git clone --recurse-submodules https://github.com/zigtools/zls /opt/zls
#   $ cd /opt/zls
#   $ git checkout master
#   $ zig build -Drelease-safe
#   $ zig-out/bin/zls config
#
# https://github.com/ziglang/zig/releases
zig 0.13.0

