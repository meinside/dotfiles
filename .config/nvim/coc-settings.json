{
  "diagnostic": {
    "checkCurrentLine": true,
    "errorSign": "âœ˜",
    "joinMessageLines": true,
    "level": "information",
    "messageTarget": "float",
    "virtualText": false
  },

  "highlight": {
    "colors": {
      "enable": true
    }
  },

  "signature": {
    "enable": true
  },

  "suggest.autoTrigger": "always",

  "coc": {
    "preferences": {
      "colorSupport": true,
      "hoverTarget": "float",
      "snippets": {
	"enable": false
      }
    }
  },

  "go": {
    "disable": {
      "workspaceFolders": false
    }
  },

  "rust-analyzer": {
    "diagnostics": {
      "enable": false
    },
    "serverPath": "~/.cargo/bin/rust-analyzer"
  },

  "languageserver": {
    "zls" : {
      "command": "/opt/zls/zig-cache/bin/zls",
      "filetypes": ["zig"]
    }
  }
}
